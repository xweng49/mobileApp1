<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test1.AddJobsPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Entry x:Name="First_name" Placeholder="First Name"/>
            <Entry x:Name="Last_name" Placeholder="Last Name"/>
            <Entry x:Name="Address" Placeholder="Address"/>
            <Entry x:Name="Description" Placeholder="Description"/>
            <Entry x:Name="Completed" Placeholder="Completed? Y/N"/>
            <Entry x:Name="Time" Placeholder="Current Time" />
            <Entry x:Name="Assigned_Time" Placeholder="Assigned Time"/>
            <Entry x:Name="Assigned_To" Placeholder="Assigned To"/>
            <Button Text="Submit" Clicked="AddJob"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>